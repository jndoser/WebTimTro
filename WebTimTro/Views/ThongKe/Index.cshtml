@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="card" style="margin-left: 20px; margin-right: 20px; margin-top: 30px; padding:15px;">
    <div class="row">

        <!-- Expense Overview -->
        <div class="col-lg-11 order-1 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <ul class="nav nav-pills" role="tablist">
                        <li class="nav-item">

                        </li>
                    </ul>
                </div>
                <div class="card-body px-0">
                    <div class="tab-content p-0">
                        <div class="tab-pane fade show active" id="navs-tabs-line-card-income" role="tabpanel">
                            <div class="d-flex p-4 pt-3">
                                <small class="text-muted d-block">Lượt bình luận theo địa điểm</small>
                            </div>
                            <div id="thongKeBinhLuan"></div>
                            <div class="d-flex justify-content-center pt-4 gap-2">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/ Expense Overview -->
        <div class="col-lg-11 order-1 mb-4">
            <div class="card-body px-0">
                <div class="tab-content p-0">
                    <div class="tab-pane fade show active" id="navs-tabs-line-card-income" role="tabpanel">
                        <div class="d-flex p-4 pt-3">
                            <small class="text-muted d-block">Lượt quan tâm theo địa điểm</small>
                        </div>
                        <div id="thongkeQuanTam"></div>
                        <div class="d-flex justify-content-center pt-4 gap-2">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
    $(function() {
        ThongKeSoBinhLuanTheoDiaDiem();
        ThongKeQuanTamTheoDiaDiem();
    });

    function ThongKeSoBinhLuanTheoDiaDiem() {
        $.ajax({
            url: '/ThongKe/ThongKeBinhLuanTheoDiaDiem',
            method: 'get',
            success: function(result) {
                if (result.status == "ok") {
                    console.log(result.data);
                    let cardColor, headingColor, axisColor, shadeColor, borderColor;

                    cardColor = config.colors.white;
                    headingColor = config.colors.headingColor;
                    axisColor = config.colors.axisColor;
                    borderColor = config.colors.borderColor;
                    // Income Chart - Area chart
                    // --------------------------------------------------------------------
                    const incomeChartEl = document.querySelector('#thongKeBinhLuan'),
                        incomeChartConfig = {
                            series: [
                                {
                                    name: 'Số bình luận',
                                    //data: [0, 24, 21, 30, 22, 42, 26, 35, 29, 30, 10, 13, 14, 11, 30, 32, 25, 29, 22, 21, 20, 21, 31]
                                    data: result.data
                                }
                            ],
                            chart: {
                                height: 215,
                                parentHeightOffset: 0,
                                parentWidthOffset: 0,
                                toolbar: {
                                    show: false
                                },
                                type: 'area'
                            },
                            dataLabels: {
                                enabled: false
                            },
                            stroke: {
                                width: 2,
                                curve: 'smooth'
                            },
                            legend: {
                                show: false
                            },
                            markers: {
                                size: 6,
                                colors: 'transparent',
                                strokeColors: 'transparent',
                                strokeWidth: 4,
                                discrete: [
                                    {
                                        fillColor: config.colors.white,
                                        seriesIndex: 0,
                                        dataPointIndex: 7,
                                        strokeColor: config.colors.primary,
                                        strokeWidth: 2,
                                        size: 6,
                                        radius: 8
                                    }
                                ],
                                hover: {
                                    size: 7
                                }
                            },
                            colors: [config.colors.primary],
                            fill: {
                                type: 'gradient',
                                gradient: {
                                    shade: shadeColor,
                                    shadeIntensity: 0.6,
                                    opacityFrom: 0.5,
                                    opacityTo: 0.25,
                                    stops: [0, 95, 100]
                                }
                            },
                            grid: {
                                borderColor: borderColor,
                                strokeDashArray: 3,
                                padding: {
                                    top: -20,
                                    bottom: -8,
                                    left: -10,
                                    right: 8
                                }
                            },
                            xaxis: {
                                categories: ['', 'Quận 1', 'Thủ Đức', 'Quận 3', 'Quận 4', 'Quận 5', 'Quận 6', 'Quận 7', 'Quận 8', 'Quận 10', 'Quận 11', 'Quận 12', 'Bình Thạnh', 'Bình Tân', 'Gò Vấp', 'Phú Nhuận', 'Tân Bình', 'Tân Phú', 'Bình Chánh', 'Cần Giờ', 'Củ Chi', 'Hóc Môn', 'Nhà Bè'],
                                axisBorder: {
                                    show: false
                                },
                                axisTicks: {
                                    show: false
                                },
                                labels: {
                                    show: true,
                                    style: {
                                        fontSize: '13px',
                                        colors: axisColor
                                    }
                                }
                            },
                            yaxis: {
                                labels: {
                                    show: false
                                },
                                min: 10,
                                max: 50,
                                tickAmount: 4
                            }
                        };
                    if (typeof incomeChartEl !== undefined && incomeChartEl !== null) {
                        const incomeChart = new ApexCharts(incomeChartEl, incomeChartConfig);
                        incomeChart.render();
                    }
                }
            },
            error: function(err) {
                console.log(err);
            }
        });
    }

function ThongKeQuanTamTheoDiaDiem() {
    $.ajax({
        url: '/ThongKe/ThongKeQuanTamTheoDiaDiem',
        method: 'get',
        success: function(result) {
            if (result.status == "ok") {
                console.log(result.data);
                var options = {
                    series: [{
                        name: 'Lượt quan tâm',
                        data: result.data
                    }],
                    chart: {
                        type: 'bar',
                        height: 350
                    },
                    plotOptions: {
                        bar: {
                            horizontal: false,
                            columnWidth: '55%',
                            endingShape: 'rounded'
                        },
                    },
                    dataLabels: {
                        enabled: false
                    },
                    stroke: {
                        show: true,
                        width: 2,
                        colors: ['transparent']
                    },
                    xaxis: {
                        categories: ['', 'Quận 1', 'Thủ Đức', 'Quận 3', 'Quận 4', 'Quận 5', 'Quận 6', 'Quận 7', 'Quận 8', 'Quận 10', 'Quận 11', 'Quận 12', 'Bình Thạnh', 'Bình Tân', 'Gò Vấp', 'Phú Nhuận', 'Tân Bình', 'Tân Phú', 'Bình Chánh', 'Cần Giờ', 'Củ Chi', 'Hóc Môn', 'Nhà Bè'],
                    },
                    yaxis: {
                        title: {
                            text: 'số lượt quan tâm'
                        }
                    },
                    fill: {
                        opacity: 1
                    },
                    tooltip: {
                        y: {
                            formatter: function(val) {
                                return "" + val + " lượt quan tâm"
                            }
                        }
                    }
                };

                var chart = new ApexCharts(document.querySelector("#thongkeQuanTam"), options);
                chart.render();
            }
        },
        error: function(err) {
            console.log(err);
        }
    });
}
</script>