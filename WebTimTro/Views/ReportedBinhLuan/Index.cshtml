@model IEnumerable<WebTimTro.Models.ReportedBinhLuanVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card" style="margin-left: 50px; margin-right: 50px; margin-top: 30px;">
    <h5 class="card-header">List User</h5>
    <h7 class="card-header">
        
    </h7>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.PhongTroId)</th>
                    <th>@Html.DisplayNameFor(model => model.NgayDang)</th>
                    <th>@Html.DisplayNameFor(model => model.NoiDung)</th>
                    <th>@Html.DisplayNameFor(model => model.TenCuaNguoiDang)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model) {
                <tr style="@((item.IsShow == true) ? "color: green;" : "color: red;")">
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> 
                    <strong>
                        @Html.DisplayFor(modelItem => item.Id)
                    </strong></td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> 
                    <strong>
                        @Html.DisplayFor(modelItem => item.PhongTroId)
                    </strong></td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> 
                    <strong>
                        @Html.DisplayFor(modelItem => item.NgayDang)
                    </strong></td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> 
                    <strong>
                        @Html.DisplayFor(modelItem => item.NoiDung)
                    </strong></td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> 
                    <strong>
                        @Html.DisplayFor(modelItem => item.TenCuaNguoiDang)
                    </strong></td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a class="dropdown-item" asp-action="Hide" asp-route-id="@item.Id">
                                    <i class="bx bx-hide me-1"></i>Hide</a>
                                <a class="dropdown-item" asp-action="Show" asp-route-id="@item.Id">
                                <i class="bx bx-show me-1"></i>Show</a>
                            </div>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>